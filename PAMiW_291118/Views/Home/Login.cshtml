@model PAMiW_291118.Models.UserViewModel
<!DOCTYPE HTML>
<html lang=pl>
<head>
    <script src="~/js/Register.js"></script>
    <link href="~/css/Login.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    @{
        ViewData["Title"] = "Zaloguj się";
    }
    <h2 style="margin-bottom: 20px;">@ViewData["Title"]</h2>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div id="Login" class="form-group hidden">
            <div>
                <label>Login</label><p style="display:inline; color:red">*</p>
            </div>
            @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control inputPass", @maxlength = "120" } })
            <div>
                @Html.ValidationMessageFor(m => m.Login, "", new { @style = "color: red; font-weight: bold;" })
            </div>
        </div>
        <div id="Passwd" class="form-group hidden">
            <div>
                <label>Hasło</label><p style="display:inline; color:red">*</p>
            </div>
            @Html.EditorFor(m => m.Passwd, new { htmlAttributes = new { @class = "form-control inputPass", @maxlength = "120", @id = "password", @type = "password" } })<img alt="Brak zdjęcia" src="~/images/closedEyeSmall.png" id="passwordSpan" class="showPasswordImage" onclick="showPassword('password')">
            <div>
                @Html.ValidationMessageFor(m => m.Passwd, "", new { @style = "color: red; font-weight: bold;" })
            </div>
        </div>
        <div class="form-group">
            <input id="submit" type="submit" class="btn btn-primary" />
        </div>
    }
</body>
</html>